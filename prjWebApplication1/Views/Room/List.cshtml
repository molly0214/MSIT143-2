@model IEnumerable<prjWebApplication1.Models.Room>

@{
    ViewData["Title"] = "List";
}

<h1>房源一覽表</h1>

<div>
    @using (Html.BeginForm())
    {
        @:關鍵字 @Html.TextBox("txtKeyword", "", new { @class = "form-control" }) <input type="submit" value="查詢" />
    }
</div>


<p>
    <a asp-action="Create">新增房間</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                名稱
            </th>
            <th>
                價格
            </th>
            <th>
                介紹
            </th>
            <th>
                會員編號
            </th>
            <th>
                狀態編號
            </th>
            <th>
                地址
            </th>
            <th>
                創立時間
            </th>
            <th>
                照片路徑
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomIntrodution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomstatusId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FImagePath)
                </td>
                <td>
                    @Html.ActionLink("修改", "Edit", new { id = item.RoomId }) |
                    @Html.ActionLink("刪除", "Delete", new { id = item.RoomId })
                </td>
            </tr>
        }
    </tbody>
</table>
